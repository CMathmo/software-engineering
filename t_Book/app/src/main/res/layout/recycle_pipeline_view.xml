<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/pipeline_card"
        android:layout_width="384dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="ID"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="105dp"
                android:layout_height="19dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Time"
                app:layout_constraintStart_toEndOf="@+id/textID"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textClass"
                android:layout_width="140dp"
                android:layout_height="17dp"
                android:layout_marginBottom="6dp"
                android:text="Class"
                app:layout_constraintBottom_toTopOf="@+id/text_account_type"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textMerchant"
                android:layout_width="151dp"
                android:layout_height="16dp"
                android:layout_marginBottom="6dp"
                android:text="Merchant"
                app:layout_constraintBottom_toTopOf="@+id/textClass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_account_type"
                android:layout_width="123dp"
                android:layout_height="18dp"
                android:layout_marginBottom="6dp"
                android:text="Accounttype"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/editTextAmount"
                android:layout_width="209dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:ems="10"
                android:inputType="number"
                android:text="Amount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>